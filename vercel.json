{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/:match*",
            "destination": "/api/index.js"
        },
        {
            "source": "/uploads/:match*",
            "destination": "/backend/uploads/:match*"
        },
        {
            "source": "/((?!api|uploads).+\\.[a-z0-9]+)$",
            "destination": "/frontend/dist/$1"
        },
        {
            "source": "/((?!api|uploads).*)",
            "destination": "/frontend/dist/index.html"
        }
    ]
}