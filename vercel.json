{
    "version": 2,
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 25,
            "includeFiles": "backend/locales/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/:match*",
            "destination": "/api/index.js"
        },
        {
            "source": "/uploads/:match*",
            "destination": "/backend/uploads/:match*"
        },
        {
            "source": "/((?!api|uploads).*)",
            "destination": "/frontend/dist/index.html"
        }
    ]
}